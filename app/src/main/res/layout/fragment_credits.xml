<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pieronegri.RisposteStronze.ui.controller.Credits">

    <ImageButton
        android:id="@+id/Btn_OrderForm"
        android:layout_width="@dimen/button_width_medium"
        android:layout_height="@dimen/button_height_medium"
        android:layout_gravity="center|top"
        android:layout_marginTop="50dp"
        android:src="@drawable/ordina"
        android:contentDescription="@string/DescBtnOrder"
        />

    <ImageView
       android:id="@+id/imageView2"
       android:layout_width="@dimen/button_width_small"
       android:layout_height="@dimen/button_height_small"
       android:layout_gravity="center"
       android:contentDescription="@string/DescBtnPalla"
       android:src="@drawable/developer" />

    <ImageButton
        android:id="@+id/Btn_FBPageLibro"
        android:layout_width="@dimen/button_width_small"
        android:layout_height="@dimen/button_height_small"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="90dp"
        android:src="@drawable/facebook_logo"
        android:contentDescription="@string/DescBtnFBPage"
        />

    <TextView
        android:id="@+id/TxtDisegniDi"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="80dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/Txt_Disegni"
        android:textColor="@color/colorText"
        android:textSize="@dimen/TxtSizeMedium"
        android:textStyle="italic" />


</FrameLayout>