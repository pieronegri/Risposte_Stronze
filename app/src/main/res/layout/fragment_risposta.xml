<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="pieronegri.RisposteStronze.ui.controller.Risposta">


    <TextView
        android:id="@+id/Txt_displayMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorText"
        android:textSize="@dimen/TxtSizeVeryBig"/>
    <TextView
        android:id="@+id/Txt_welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:textColor="@color/colorText"
        android:textSize="@dimen/TxtSizeVeryBig"/>

    <ImageButton
        android:id="@+id/Btn_getNewMessage"
        android:layout_width="@dimen/button_height_large"
        android:layout_height="@dimen/button_width_large"
        android:background="@drawable/nobackground_palla200x200"
        android:contentDescription="@string/DescBtnPalla"
        android:layout_marginBottom="@dimen/button_marginBottom"
        android:layout_gravity="bottom|center"
        android:clickable="true"
        android:focusable="true"
        android:textSize="@dimen/TxtSizeBig"/>

    <ProgressBar
        android:id="@+id/ProgressBar_cyclic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/Btn_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share"
        android:background="@color/colorBackground"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/button_marginBottom"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        />

</FrameLayout>